{
    "name": "maaf/storage",
    "description": "MAAF Storage Package - File management, asset pipeline, CDN integration, and module-level storage namespaces",
    "type": "library",
    "keywords": ["maaf", "storage", "files", "assets", "cdn", "pipeline"],
    "license": "MIT",
    "authors": [
        {
            "name": "Bloch TamÃ¡s",
            "email": "info@bloch.hu"
        }
    ],
    "require": {
        "php": ">=8.1",
        "maaf/core": "^2.0"
    },
    "suggest": {
        "aws/aws-sdk-php": "Required for S3 storage adapter",
        "league/flysystem": "Optional for advanced filesystem operations"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "MAAF\\Storage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MAAF\\Storage\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
